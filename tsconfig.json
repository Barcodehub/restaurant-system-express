{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./src/types"] // Añadir esta línea
  },
  "include": ["src/**/*"], // Asegúrate de que incluya la carpeta src
  "exclude": ["node_modules"]
}